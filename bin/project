#!/usr/bin/env sh

# Run with `source` to change directory
function project() {
    local folder="$(ls -d $HOME/*/ $HOME/Code/@modashio/*/ $HOME/Code/Projects/*/ | sed "s@$HOME/@@" | fzf)"
    local absolute_folder="$HOME/$folder"
    if [ -z "$folder" ]; then
        return 1
    fi

    cd "$absolute_folder"
}

project
